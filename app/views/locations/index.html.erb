<h1>Listing locations</h1>

<table class="scav_listing" cellpadding="0" cellspacing="0" id="locatoins">
  <thead>
    <tr>
      <th>Location</th>
      <th>Items</th>
      <th class="lastcol"></th>
    </tr>
  </thead>
  <tbody>

<% @locations.each do |location| %>
  <tr>
    <td><%= link_to location.name, location %></td>
    <td><%= location.items.count %></td>
    <td class="lastcol">
      <% if location.allowed_to_save %>
        <%= link_to 'Edit', edit_location_path(location) %>
      <% end %>
      <% if location.allowed_to_destroy %>
        <%= link_to 'Destroy', location, :confirm => 'Are you sure?', :method => :delete %>
      <%end%>
    </td>
  </tr>
<% end %>
  </tbody>
</table>

<br />
<% if Location.allowed_to_create %>
  <%= link_to 'New location', new_location_path %> | 
<% end %>
<%= link_to 'Home', root_url %>
