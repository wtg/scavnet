<div id="titleblock">
  <%= image_tag 'scavnet_logo.jpg' %><br /><br />
  <!--<h1>ScavNet</h1>-->
  <h2>Exchange materials, equipment, and random junk from the lab or the room!</h2><br /><br />
</div>
<div id="search_padding">
  <table cellpadding="6" cellspacing="0" width="100%">
    <tr>
      <td class="searchbox" width="45%">
        <h2>Live Search</h2>
        <div style="float:left; width:85%">
          <form action="/scavnet" id="search" method="post"><input autocomplete="off" id="query" name="query" type="text" /> </form>
        </div>
        <div style="float:right;text-align:left; width:15%;">
          <%= link_to_function(image_tag('cancel_sel.gif')) do |page|; page[:query].value = ''; end %>
        </div>
      </td>
      <td class="toplinks" width="55%">
        <ul>
          <li><%= link_to 'Add Listing', new_item_path %></li>
          <li><a href="#">How do I use this junk</a></li>
          <li><%= link_to 'Add Location', new_location_path %></li>
          <li><%= link_to 'Add Category', new_category_path %></li>
        </ul>
      </td>
    </tr>
  </table>
</div>

<table class="scav_listing sortable" cellpadding="0" cellspacing="0" width="100%">
  <thead>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Category</th>
    <th>Location</th>
    <th>Room</th>
    <th>Status</th>
    <th></th>
  </tr>
 </thead>
 <tbody>
<% @items.each do |item| %>
  <tr class="<%= cycle('listing_even', 'listing_odd') %>">
    <td>
      <center>
        <%= link_to(image_tag(item.photo.url(:thumb)), item) unless item.photo_file_name.blank? %>
      </center>
    </td>
    <td><%= link_to item.name, item %></td>
    <td><%=h item.category.name %></td>
    <td><%=h item.location.name %></td>
    <td><%=h item.room %></td>
    <td><%=h item.status %></td>
    <td></td>
  </tr>
<% end %>
 </tbody>
</table>

<br />

<%= link_to 'New item', new_item_path %>
